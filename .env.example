# Server Configuration
PORT=8000
NODE_ENV=development # Set to "production" in production environments

# Client & Server URLs
CLIENT_URL=http://localhost:4200 # Frontend application URL
SERVER_URL=http://localhost:8000 # Backend API base URL

# Database Configuration
DB_URI=mongodb://localhost:27017/craftoria # MongoDB connection string

# Authentication & Security
JWT_SECRET_KEY=your_jwt_secret_key # JWT secret key (keep it secure)
JWT_EXPIRE_TIME=30d # JWT expiration time (e.g., 30d, 24h, 60m)

# Email Service (SMTP)
EMAIL_HOST=smtp.example.com # SMTP host (e.g., smtp.gmail.com)
EMAIL_PORT=587 # SMTP port (587 for TLS, 465 for SSL)
EMAIL_USER=your_email@example.com # Email username
EMAIL_PASSWORD=your_email_password # Email password (keep it secure)

# Payment Gateway (Stripe)
STRIPE_SECRET=your_stripe_secret_key # Stripe API secret key
STRIPE_WEBHOOK_SECRET=your_webhook_secret # Stripe webhook signing secret